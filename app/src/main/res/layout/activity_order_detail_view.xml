<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

<android.support.constraint.ConstraintLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".View.OrderView.OrderDetailView.OrderDetailView">
  <RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainAcitivityView.MainActivityViewClass">

    <android.support.design.widget.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/img_profile"
          android:layout_width="?attr/actionBarSize"
          android:layout_height="?attr/actionBarSize"
          android:layout_toStartOf="@+id/btn_add"
          android:padding="12dp"
          android:src="@drawable/ic_vector_account"
          android:layout_alignParentEnd="true"
          app:srcCompat="@drawable/ic_vector_account"
          android:onClick="goProfileActivity"/>
        <android.support.v7.widget.Toolbar
          android:id="@+id/app_bar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:theme="@style/AppThemeSearchView"
          android:layout_toStartOf="@+id/img_profile">
        </android.support.v7.widget.Toolbar>
      </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
    <ProgressBar
      android:id="@+id/progress_downloadOrderElements"
      style="?android:attr/progressBarStyleHorizontal"
      android:indeterminateOnly="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/appBarLayout"
      android:layout_marginTop="-5dp"
      android:theme="@style/AppTheme.ProgressBar"/>
    <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerListOrderElelments"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="-11dp"
      android:layout_below="@+id/progress_downloadOrderElements"
      android:visibility="visible"
      tools:listitem="@layout/item_list_order_detail"/>


    <TextView
      android:id="@+id/lbl_zero_orders_elements"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TextView_Title"
      android:text="@string/msg_zero_orders_elements"
      android:layout_centerInParent="true"
      android:textColor="@color/colorPrimary"
      android:textSize="28sp"
      android:visibility="visible"
      android:gravity="center"/>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/floating_action_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      app:srcCompat="@drawable/ic_vector_add"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:onClick="goCreateOrder"
      app:backgroundTint="@color/colorPrimary"
      />
  </RelativeLayout>


</android.support.constraint.ConstraintLayout>

</layout>