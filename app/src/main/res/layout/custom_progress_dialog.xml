<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cardView_account_details"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardCornerRadius="10dp"
  app:cardElevation="0dp"
  app:cardBackgroundColor="@android:color/transparent"
>
  <RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/colorPrimaryTransparent">

    <ProgressBar
      android:id="@+id/progress_custom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:layout_marginBottom="10dp"
      android:theme="@style/AppTheme.ProgressBarWhite"
      android:padding="10dp"
      android:background="@android:color/transparent"/>
    <TextView
      android:id="@+id/lbl_message_progress"
      style="@style/TextView_Title_White"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Cargando..."
      android:layout_below="@+id/progress_custom"
      android:padding="20dp"
      android:textAlignment="center"
      android:background="@android:color/transparent"/>
  </RelativeLayout>


</android.support.v7.widget.CardView>

