<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SaleView2.SaleViewClass">

    <android.support.design.widget.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize">
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
          android:id="@+id/containers_buttons"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentEnd="true">

          <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_total"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/lbl_sale_total"
            android:visibility="visible"
            android:theme="@style/AppTheme.ButtonGralTransparentInverse"
            android:clickable="false"
            android:focusable="false"/>

        </RelativeLayout>


        <android.support.v7.widget.Toolbar
          android:id="@+id/app_bar"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentStart="true"
          android:layout_toStartOf="@+id/containers_buttons"
          android:theme="@style/AppThemeSearchView"
          app:title="@string/lbl_generate_sale">
        </android.support.v7.widget.Toolbar>
      </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/appBarLayout"
      android:paddingStart="5dp"
      android:paddingEnd="5dp">
      <ProgressBar
        android:id="@+id/progress_downloadclient"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminateOnly="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:visibility="gone"
        android:theme="@style/AppTheme.ProgressBar"/>


      <TextView
        android:id="@+id/lbl_sale_client_name"
        style="@style/TextView_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progress_downloadclient"
        android:text="@string/lbl_sale_select_name"
        android:padding="5dp"/>
      <LinearLayout
        android:id="@+id/container_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_sale_client_name"
        android:weightSum="1"
        android:padding="5dp">


        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight=".2">
          <android.support.design.widget.FloatingActionButton
            android:id="@+id/fbtn_search_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="start|center"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_vector_search_client"
            app:backgroundTint="@color/colorPrimary"
            android:onClick="goClientsActivity"
            />
        </RelativeLayout>


        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight=".8"
          android:gravity="center"
          android:orientation="vertical">
          <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_sale_client_name"
            style="@style/TextView_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/lbl_change_client"
            android:visibility="gone"
            android:inputType="number"/>
          <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_name_client"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="goClientsActivity"
            android:text="@string/lbl_sale_select_name"
            android:theme="@style/AppTheme.ButtonGralTransparent"
            android:visibility="visible"/>
          <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_sale_client_amount"
            style="@style/Edittext_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:visibility="gone"
            android:hint="@string/lbl_product_price_sale_hint"
            android:inputType="number"/>
        </LinearLayout>



      </LinearLayout>


      <TextView
        android:id="@+id/lbl_sale_product_name"
        style="@style/TextView_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/lbl_sale_select_product"
        android:layout_below="@+id/container_client"
        android:padding="5dp"/>

      <LinearLayout
        android:id="@+id/container_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_sale_product_name"
        android:weightSum="1"
        android:padding="5dp">


        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight=".2">
          <android.support.design.widget.FloatingActionButton
            android:id="@+id/fbtn_search_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="start|center"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_vector_search"
            app:backgroundTint="@color/colorPrimary"
            android:onClick="goProductsActivity"
            />
        </RelativeLayout>


        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight=".8"
          android:gravity="center"
          android:orientation="vertical">
          <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_sale_product_name"
            style="@style/TextView_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/lbl_change_product"
            android:visibility="gone"
            android:inputType="number"/>
          <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_name_product"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/lbl_sale_select_product"
            android:visibility="visible"
            android:theme="@style/AppTheme.ButtonGralTransparent"
            android:onClick="goProductsActivity"/>

        </LinearLayout>



      </LinearLayout>
      <RelativeLayout
        android:id="@+id/container_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_sale_product_name"
        android:weightSum="1"
        android:padding="5dp"
        android:visibility="gone">
        <android.support.design.widget.FloatingActionButton

          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginBottom="10dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
          android:layout_gravity="start|center"
          android:onClick="goProductsActivity"
          android:layout_centerVertical="true"
          app:backgroundTint="@color/colorPrimary"
          app:fabSize="mini"
          app:srcCompat="@drawable/ic_vector_search"/>

        <android.support.v7.widget.AppCompatTextView
          android:id="@+id/lbl_name_product"
          style="@style/Edittext_custom_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_alignParentTop="true"
          android:layout_gravity="center_horizontal"
          android:layout_toStartOf="@+id/lbl_price_product"
          android:gravity="start"
          android:hint="@string/lbl_product_name"
          android:inputType="number"/>

        <android.support.v7.widget.AppCompatTextView
          android:id="@+id/lbl_price_product"
          style="@style/Edittext_custom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="end"
          android:layout_gravity="center_horizontal"
          android:hint="@string/lbl_product_price_sale_hint"
          android:layout_toStartOf="@+id/img_product"
          android:inputType="number"
          android:paddingEnd="10dp"
          android:paddingStart="0dp"
          />
        <android.support.v7.widget.AppCompatTextView
          android:id="@+id/lbl_code_product"
          style="@style/Edittext_custom_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/lbl_product_code_hint"
          android:inputType="number"
          android:gravity="start"
          android:layout_toStartOf="@+id/img_product"
          android:layout_alignBottom="@+id/img_product"
          android:drawableStart="@drawable/ic_vector_bar_code"
          android:drawablePadding="10dp"
          android:paddingEnd="10dp"
          android:textColor="@color/colorGray"
          android:paddingStart="0dp"
          />

        <ImageView
          android:id="@+id/img_product"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_alignParentEnd="true"
          app:srcCompat="@drawable/ic_vector_image"

          android:scaleType="centerCrop"/>

      </RelativeLayout>

      <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_Products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/container_product"
        android:visibility="gone"/>

      <TextView
        android:id="@+id/lbl_msg_ticket_empty"
        style="@style/TextView_Text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-1dp"
        android:layout_below="@+id/container_product"
        android:padding="10dp"
        android:gravity="center"
        android:text="@string/lbl_sale_ticket_empty_"
        android:textSize="28dp"/>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/fabtn_remove_product"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      app:fabSize="mini"

      app:srcCompat="@drawable/ic_vector_remove"
      android:onClick="removeProduct"
      app:backgroundTint="@color/colorPrimary"/>
    <android.support.design.widget.FloatingActionButton
      android:id="@+id/fabtn_generar_ticket"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      app:srcCompat="@drawable/ic_vector_ok"
      android:onClick="generateTicket"
      app:backgroundTint="@android:color/holo_green_dark"/>
  </RelativeLayout>

</layout>