<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cardView_account_details"
  android:layout_width="match_parent"
  android:layout_height="150dp"
  android:background="@color/colorAccent"
  app:cardCornerRadius="5dp"
  app:cardElevation="5dp"
  android:foreground="?android:attr/selectableItemBackground"
  app:cardUseCompatPadding="true">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/img_product"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_centerVertical="true"
      android:scaleType="center"/>

    <TextView
      android:id="@+id/lbl_title_action"
      style="@style/TextView_Title"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_toEndOf="@+id/img_product"
      android:padding="10dp"
      android:gravity="center"
      android:textSize="28sp"
      android:layout_toStartOf="@+id/img_arrow"/>
    <TextView
      android:id="@+id/lbl_subtitle_action"
      style="@style/TextView_Text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_toEndOf="@+id/img_product"
      android:padding="10dp"
      android:gravity="center"
      android:layout_toStartOf="@+id/img_arrow"/>
    <ImageView
      android:id="@+id/img_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      app:srcCompat="@drawable/ic_vector_arrow_next"/>
  </RelativeLayout>


</androidx.cardview.widget.CardView>

