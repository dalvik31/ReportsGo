<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_container_item_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/containerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/container_img_buttons">


            <TextView
                android:id="@+id/lbl_order_name"
                style="@style/TextView_Title_Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/ImageView_delete_item"
                android:gravity="center|start"
                android:padding="10dp"
                android:text="Martes 19 / Marzo / 2019"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/ImageView_delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@drawable/ic_vector_remove_red" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/container_img_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_concept"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_vector_image" />

        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/containerName"
          >

        <com.google.android.material.progressindicator.ProgressIndicator
            android:id="@+id/progressOrder"
            style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


      </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>