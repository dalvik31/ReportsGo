<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_container_item_order"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:animateLayoutChanges="true"
      android:padding="5dp"
      android:layout_height="wrap_content">


    <TextView
        android:id="@+id/lbl_order_name"
        style="@style/TextView_Title_Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-black"
        android:singleLine="true"
        android:text="Nombre"
        android:gravity="start"
        android:layout_marginStart="5dp"
        android:textAlignment="inherit"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lbl_order_client" />

    <TextView
        android:id="@+id/lbl_order_client"
        style="@style/TextView_Title_Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/AppCompatCheckBox_buy_order"
        android:layout_toEndOf="@+id/Imagen_mover_pedido"
        android:gravity="center|start"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/Imagen_mover_pedido"
        card_view:layout_constraintBottom_toBottomOf="@+id/lbl_order_name"
        app:layout_constraintTop_toTopOf="@+id/lbl_order_name"
        tools:text="Cliente desconocido" />

    <ImageView
        android:id="@+id/Imagen_mover_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_baseline_drive_file_move"
        card_view:layout_constraintBottom_toBottomOf="@+id/lbl_order_client"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="@+id/lbl_order_client" />

    <TextView
        android:id="@+id/lbl_order_descripcion"
        android:textColor="@color/colorBlackTransparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/ImageView_delete_item"
        android:layout_weight=".9"
        android:textSize="20dp"
        android:gravity="center|start"
        android:padding="6dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/lbl_order_name" />

    <TextView
        android:id="@+id/txtColor"
        style="@style/TextView_Title"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:textSize="15dp"
        android:padding="6dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/lbl_order_descripcion" />

    <TextView
        android:id="@+id/lbl_order_gender"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/TextView_Title"
        android:textSize="15dp"
        android:padding="6dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/txtColor"/>

    <TextView
        android:id="@+id/lbl_order_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView_Title"
        android:textSize="15dp"
        android:padding="6dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/lbl_order_gender"/>

    <ImageView
        android:id="@+id/ImageView_delete_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="2dp"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_vector_remove_red"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/lbl_order_size" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/AppCompatCheckBox_buy_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:gravity="center|end"
        android:padding="10dp"
        android:theme="@style/checkBoxStyle"
        android:text="@string/lbl_order_buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ImageView_delete_item"
        app:layout_constraintTop_toTopOf="@+id/ImageView_delete_item" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>