<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_container_item_order"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:contentPadding="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="7dp"
      android:layout_centerInParent="true"
      android:layout_alignParentStart="true"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/lbl_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            style="@style/TextView_Title_Black"
            android:padding="6dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/lbl_order_size"/>
        <TextView
            android:id="@+id/lbl_order_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            style="@style/TextView_Title"
            android:textSize="15dp"
            android:text="Cantidad"
            android:layout_toStartOf="@+id/lbl_order_gender"
            android:padding="6dp"/>
        <TextView
            android:id="@+id/lbl_order_gender"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            style="@style/TextView_Title_Black"
            android:padding="6dp"
            android:layout_alignParentEnd="true"/>
      </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="1">
        <TextView
            android:id="@+id/lbl_order_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".9"
            android:gravity="center|start"
            style="@style/TextView_Title_Black"
            android:padding="6dp"
            android:layout_toStartOf="@+id/ImageView_delete_item"/>

        <TextView
            android:id="@+id/txtColor"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            style="@style/TextView_Title"
            android:textSize="15dp"
            android:layout_weight=".1"
            />
      </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/container_img_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/ImageView_delete_item"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_vector_remove_red"
          android:layout_alignParentStart="true"
          android:layout_centerInParent="true"
          android:padding="10dp"
          />

      <ImageView
          android:id="@+id/Imagen_mover_pedido"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@+id/ImageView_delete_item"
          app:srcCompat="@drawable/ic_baseline_drive_file_move_24"
          android:padding="5dp"/>

      <androidx.appcompat.widget.AppCompatCheckBox
          android:id="@+id/AppCompatCheckBox_buy_order"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/lbl_order_buy"
          android:theme="@style/checkBoxStyle"
          android:layout_centerInParent="true"
          android:layout_alignParentEnd="true"
          android:padding="10dp"/>

      <TextView
          android:id="@+id/lbl_order_client"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center|start"
          android:layout_toEndOf="@+id/Imagen_mover_pedido"
          android:layout_toStartOf="@+id/AppCompatCheckBox_buy_order"
          style="@style/TextView_Title_Black"
          android:layout_centerInParent="true"
          android:textColor="@color/colorPrimary"
          />

    </RelativeLayout>

  </LinearLayout>

</androidx.cardview.widget.CardView>