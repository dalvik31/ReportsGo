<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/cardView_container_item_order"
  android:layout_margin="5dp"
  app:cardCornerRadius="12dp"
  app:cardElevation="0dp"
  app:contentPadding="4dp"
  android:foreground="?android:attr/selectableItemBackground"
  android:clickable="true"
  android:focusable="true">

<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="10dp"
  android:layout_centerInParent="true"
  android:layout_alignParentStart="true"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/lbl_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        style="@style/TextView_Title_Black"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/lbl_order_size"/>
      <TextView
        android:id="@+id/lbl_order_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        style="@style/TextView_Title_Black"
        android:layout_toStartOf="@+id/lbl_order_gender"
        android:padding="10dp"/>
      <TextView
        android:id="@+id/lbl_order_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        style="@style/TextView_Title_Black"
        android:padding="10dp"
        android:layout_alignParentEnd="true"/>
    </RelativeLayout>



    <TextView
      android:id="@+id/lbl_order_descripcion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center|start"
      style="@style/TextView_Title_Black"
      android:padding="10dp"
      android:layout_toStartOf="@+id/ImageView_delete_item"/>

  </LinearLayout>


  <RelativeLayout
    android:id="@+id/container_img_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
      android:id="@+id/ImageView_delete_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_vector_remove_red"
      android:layout_alignParentStart="true"
      android:layout_centerInParent="true"
      android:padding="10dp"
      />

    <androidx.appcompat.widget.AppCompatCheckBox
      android:id="@+id/AppCompatCheckBox_buy_order"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/lbl_order_buy"
      android:theme="@style/checkBoxStyle"
      android:layout_centerInParent="true"
      android:layout_alignParentEnd="true"
      android:padding="10dp"/>
    
      <TextView
        android:id="@+id/lbl_order_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:layout_toEndOf="@+id/ImageView_delete_item"
        android:layout_toStartOf="@+id/AppCompatCheckBox_buy_order"
        style="@style/TextView_Title_Black"
        android:layout_centerInParent="true"
        android:textColor="@color/colorPrimary"
       />

  </RelativeLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>