<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/clientNameFragment">

    <fragment
        android:id="@+id/clientNameFragment"
        android:name="com.epacheco.reports.view.clientView.addNewClient.ClientNameFragment"
        android:label="fragment_client_name"
        tools:layout="@layout/fragment_client_name" >
        <action
            android:id="@+id/action_clientNameFragment_to_clientLastNameFragment"
            app:destination="@id/clientLastNameFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_left"
            app:popEnterAnim="@anim/enter_left_to_right"
            app:popExitAnim="@anim/exit_right"/>
    </fragment>
    <fragment
        android:id="@+id/clientLastNameFragment"
        android:name="com.epacheco.reports.view.clientView.addNewClient.ClientLastNameFragment"
        android:label="fragment_client_last_name"
        tools:layout="@layout/fragment_client_last_name" >
        <action
            android:id="@+id/action_clientLastNameFragment_to_clientInformationFragment"
            app:destination="@id/clientInformationFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_left"
            app:popEnterAnim="@anim/enter_left_to_right"
            app:popExitAnim="@anim/exit_right"/>
    </fragment>
    <fragment
        android:id="@+id/clientInformationFragment"
        android:name="com.epacheco.reports.view.clientView.addNewClient.ClientInformationFragment"
        android:label="fragment_client_information"
        tools:layout="@layout/fragment_client_information" >
        <action
            android:id="@+id/action_clientInformationFragment_to_clientPhoneFragment"
            app:destination="@id/clientPhoneFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_left"
            app:popEnterAnim="@anim/enter_left_to_right"
            app:popExitAnim="@anim/exit_right"/>
    </fragment>
    <fragment
        android:id="@+id/clientPhoneFragment"
        android:name="com.epacheco.reports.view.clientView.addNewClient.ClientPhoneFragment"
        android:label="fragment_client_phone"
        tools:layout="@layout/fragment_client_phone" >
        <action
            android:id="@+id/action_clientPhoneFragment_to_clientCreditFragment"
            app:destination="@id/clientCreditFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_left"
            app:popEnterAnim="@anim/enter_left_to_right"
            app:popExitAnim="@anim/exit_right"/>
    </fragment>
    <fragment
        android:id="@+id/clientCreditFragment"
        android:name="com.epacheco.reports.view.clientView.addNewClient.ClientCreditFragment"
        android:label="fragment_client_credit"
        tools:layout="@layout/fragment_client_credit" />
</navigation>